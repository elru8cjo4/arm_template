{
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.0.1-preview",
  "parameters": {
    "basics": [
      {
        "name": "deploymentName",
        "type": "Microsoft.Common.TextBox",
        "label": "VM Name",
        "toolTip": "VM name",
        "constraints": {
          "required": true,
          "regex": "^[a-z0-9A-Z-]{1,10}$",
          "validationMessage": "Only letters and numbers are allowed, and the value must be 1-10 characters long."
        }
      },
      {
        "name": "userName",
        "type": "Microsoft.Common.TextBox",
        "label": "User Name",
        "toolTip": "User Name",
        "constraints": {
          "required": true,
          "regex": "^[a-z][a-z0-9]{0,9}$",
          "validationMessage": "Only lowercase letters and numbers are allowed, and the value must be 1-10 characters long and starts with a letter."
        }
      },
      {
        "name": "admPassword",
        "type": "Microsoft.Compute.CredentialsCombo",
        "label": {
          "authenticationType": "Authentication type",
          "password": "User Password",
          "confirmPassword": "Confirm password",
          "sshPublicKey": "SSH public key"
        },
        "toolTip": {
          "authenticationType": "",
          "password": "the password",
          "sshPublicKey": ""
        },
        "constraints": {
          "required": true
        },
        "options": {
          "hideConfirmation": true
        },
        "osPlatform": "Linux"
      }
    ],
    "steps": [
      {
        "name": "dsmVMDBSize",
        "label": "Trend Micro DSM - VM Size, Grant Agent Seats, Address and Ports.",
        "subLabel": {
          "preValidation": "Configure agent seats, manager address and ports",
          "postValidation": "Done"
        },
        "bladeTitle": "DSM settings - VM Size, Grant Agent Seats, Managre Address and Ports",
        "elements": [
          {
            "name": "vmSize",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "VM Size (Agent Seats)",
            "toolTip": "VM Size and Agent Seats Mapping:<br/>* Standard_D2_v2:  25 seats<br/>* Standard_D3_v2:  50 seats<br/>* Standard_D4_v2: 100 seats<br/>* Standard_D5_v2: 200 seats<br/>* Standard_D12_v2: Bring-Your-Own-License",
            "recommendedSizes": [
                "Standard_D2_v2",
                "Standard_D3_v2",
                "Standard_D4_v2"
            ],
            "constraints": {
              "allowedSizes": [
                "Standard_D2_v2",
                "Standard_D3_v2",
                "Standard_D4_v2",
                "Standard_D5_v2",
                "Standard_D12_v2"
              ],
              "excludedSizes": []
            },
            "osPlatform": "Linux",
            "imageReference": {
              "publisher": "MicrosoftWindowsServer",
              "offer": "WindowsServer",
              "sku": "2012-R2-Datacenter"
            },
            "count": 1
          },
          {
            "name": "managerPort",
            "type": "Microsoft.Common.TextBox",
            "label": "Manager Port",
            "defaultValue": "443",
            "constraints": {
              "required": true
            }
          },
          {
            "name": "heartbeatPort",
            "type": "Microsoft.Common.TextBox",
            "label": "Heartbeat Port",
            "toolTip": "",
            "defaultValue": "4120",
            "constraints": {
              "required": true
            }
          },
          {
            "name": "managerAddress",
            "type": "Microsoft.Common.TextBox",
            "label": "Manager Address",
            "toolTip": "You can leave it blank to use IP as the manager address.",
            "defaultValue": "",       
            "constraints": {
              "required": false
            }
          }
        ]
      },
      {
        "name": "dsmDB",
        "label": "Trend Micro DSM - Database",
        "subLabel": {
          "preValidation": "Configure Database Settings",
          "postValidation": "Done"
        },
        "bladeTitle": "DSM Database Settings",
        "elements": [
          {
            "name": "dbSize",
            "type": "Microsoft.Common.DropDown",
            "label": "New MSSQL Database Size",
            "defaultValue": "Standard-S0",
            "toolTip": "Choose 'Existing Database' to use your already created DB.",
            "constraints": {
              "required": true,
              "allowedValues": [
                {
                  "label": "Standard-S0",
                  "value": "Standard-S0"
                },
                {
                  "label": "Standard-S1",
                  "value": "Standard-S1"
                },
                {
                  "label": "Standard-S2",
                  "value": "Standard-S2"
                },
                {
                  "label": "Standard-S3",
                  "value": "Standard-S3"
                },
                {
                  "label": "Existing Database",
                  "value": "none"
                }
              ]
            }
          },
          {
            "name": "existingDB",
            "type": "Microsoft.Common.Section",
            "label": "Please input the database hostname and choose on manager node config if you choose existing database.",
            "elements": [
            {
                "name": "dbHostName",
                "type": "Microsoft.Common.TextBox",
                "label": "Database Hostname",
                "toolTip": "Your currently running Microsoft SQL Server hostname"
            },
            {
                "name": "dbNode",
                "type": "Microsoft.Common.OptionsGroup",
                "label": "Manager Node Config",
                "defaultValue": "New Manager Node",
                "toolTip": "<b>New Manager Node:</b> Augment your existing installation with an additional Deep Security Manager Node to provide redundancy and improve performance.<br/><br/><b>Upgrade: </b> Keep your existing data but replace your current Deep Security Manager with this installation.<br/><br/><b>Fresh Install: </b>Overwrite your existing data and replace your current Deep Security Manager with this installation.",
                "constraints": {
                    "allowedValues": [
                    {
                        "label": "New Manager Node",
                        "value": "new"
                    },
                    {
                        "label": "Upgrade",
                        "value": "upgrade"
                    },
                    {
                        "label": "Frsh Install",
                        "value": "fresh"
                    }
                    ]
                }
            }
            ]
          },
          {
            "name": "dbName",
            "type": "Microsoft.Common.TextBox",
            "label": "Database Name", 
            "defaultValue": "dsm",           
            "constraints": {
              "required": true,
              "regex": "^[a-z][a-z0-9]{0,9}$",
              "validationMessage": "Only lowercase letters and numbers are allowed, and the value must be 1-10 characters long and starts with a letter."
            }
          },
          {
            "name": "dbAdminName",
            "type": "Microsoft.Common.TextBox",
            "label": "Database Admin Name",
            "defaultValue": "admin",          
            "constraints": {
              "required": true,
              "regex": "^[a-z][a-z0-9]{0,9}$",
              "validationMessage": "Only lowercase letters and numbers are allowed, and the value must be 1-10 characters long and starts with a letter."
            }
          },
          {
            "name": "dbAdminPassword",
            "type": "Microsoft.Common.PasswordBox",
            "label": {
              "password": "Database Admin Password",
              "confirmPassword": "Confirm password"
            },
            "constraints": {
              "required": true,
              "regex": "",
              "validationMessage": ""
            },
            "options": {
              "hideConfirmation": false
            }
          }
        ]
      },
      {
        "name": "dsmCredential",
        "label": "Trend Micro DSM - Credentials",
        "subLabel": {
          "preValidation": "Configure DSM Credentials",
          "postValidation": "Done"
        },
        "bladeTitle": "DSM Credentials",
        "elements": [
          {
            "name": "dsmAdminName",
            "type": "Microsoft.Common.TextBox",
            "label": "Deep Security Admin Name",
            "defaultValue": "admin",          
            "constraints": {
              "required": true,
              "regex": "^[a-z][a-z0-9]{0,9}$",
              "validationMessage": "Only lowercase letters and numbers are allowed, and the value must be 1-10 characters long and starts with a letter."
            }
          },
          {
            "name": "dsmAdminPassword",
            "type": "Microsoft.Common.PasswordBox",
            "label": {
              "password": "Deep Security Admin Password",
              "confirmPassword": "Confirm password"
            },
            "constraints": {
              "required": true,
              "regex": "",
              "validationMessage": ""
            },
            "options": {
              "hideConfirmation": false
            }
          }
        ]
      },
      {
        "name": "advSettings",
        "label": "Settings",
        "subLabel": {
          "preValidation": "Configure optional features",
          "postValidation": "Done"
        },
        "bladeTitle": "Settings",
        "elements": [
          {
            "name": "publicIPAddressDomainName",
            "type": "Microsoft.Network.PublicIpAddressCombo",
            "label": {
              "publicIpAddress": "Public IP address",
              "domainNameLabel": "Domain name label"
            },
            "toolTip": {
              "publicIpAddress": "",
              "domainNameLabel": ""
            },
            "defaultValue": {
              "publicIpAddressName": "[basics('deploymentName')]",
              "domainNameLabel": "[basics('deploymentName')]"
            },
            "options": {
              "hideNone": false,
              "hideDomainNameLabel": false
            }
          },
          {
            "name": "storageAcc",
            "type": "Microsoft.Storage.StorageAccountSelector",
            "label": "Storage account",
            "toolTip": "",
            "defaultValue": {
              "name": "dsmstorage01",
              "type": "Premium_LRS"
            }
          },
          {
            "name": "vnetwork",
            "type": "Microsoft.Network.VirtualNetworkCombo",
            "label": {
              "virtualNetwork": "Virtual network",
              "subnets": "Subnets"
            },
            "toolTip": {
              "virtualNetwork": "",
              "subnets": ""
            },
            "defaultValue": {
              "name": "vnet01",
              "addressPrefixSize": "/16"
            },
            "constraints": {
              "minAddressPrefixSize": "/24"
            },
            "subnets": {
              "VMsubnet": {
                "label": "VM Subnet",
                "defaultValue": {
                  "name": "vmsubnet",
                  "addressPrefixSize": "/24"
                },
                "constraints": {
                  "minAddressPrefixSize": "/24",
                  "minAddressCount": 12,
                  "requireContiguousAddresses": true
                }
              },
              "VPNsubnet": {
                "label": "VPN Clients subnet",
                "defaultValue": {
                  "name": "vpnsubnet",
                  "addressPrefixSize": "/26"
                },
                "constraints": {
                  "minAddressPrefixSize": "/26",
                  "minAddressCount": 8,
                  "requireContiguousAddresses": true
                }
              }
            }
          }
        ]
      }
    ],
    "outputs": {
      "location": "[location()]",
      "deploymentName": "[basics('deploymentName')]",
      "vmAdminName": "[basics('userName')]",
      "vmAdminPassword": "[basics('admPassword')]",
      "vmSize": "[steps('dsmVMDBSize').vmSize]",
      "dsmAdminName": "[steps('dsmCredential').dsmAdminName]",
      "dsmAdminPassword": "[steps('dsmCredential').dsmAdminPassword]",      
      "dbName": "[steps('dsmDB').dbName]",
      "dbAdminName": "[steps('dsmDB').dbAdminName]",
      "dbAdminPassword": "[steps('dsmDB').dbAdminPassword]",
      "publicIPAddressDomainName": "[steps('advSettings').publicIPAddressDomainName]",
      "storageAcc": "[steps('advSettings').storageAcc.name]",
      "networkName": "[steps('advSettings').vnetwork.name]",
      "networkExists": "[steps('advSettings').vnetwork.newOrExisting]",
      "networkAddress": "[steps('advSettings').vnetwork.addressPrefix]",
      "subnetVMName": "[steps('advSettings').vnetwork.subnets.VMsubnet.name]",
      "subnetVPNName": "[steps('advSettings').vnetwork.subnets.VPNsubnet.name]",
      "subnetVMNaddress": "[steps('advSettings').vnetwork.subnets.VMsubnet.addressPrefix]",
      "subnetVPNaddress": "[steps('advSettings').vnetwork.subnets.VPNsubnet.addressPrefix]"
    }
  }
}
